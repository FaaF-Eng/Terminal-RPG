#BIBLIOTECAS
import sys
import time
import random
import os 

#FUNÇÕES 

def limparTela(): #Fazendo a opção de Limpar o Terminal durante a execução do programa
    os.system('cls' if os.name == 'nt' else 'clear')
    print ('=====================================================\n\n\n\n\n')

def dialogo01():
     print('provisorio')
 #    escrever_devagar(f'\n\n<Jubileu> A floresta sombria é perigosa, mas nada se compara a caverna , {nome_player}\n\n\n', intervalo=0.04)

def escrever_devagar(texto, intervalo=0.1): #Configurando escrita devagar
    for char in texto:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(intervalo)

def sairDoJogo():
            limparTela()
            escrever_devagar('\n\n\nSaindo do Jogo\n\n\n\n\n', intervalo=0.05)
            escrever_devagar('Desenvolvido por Fábio Teixeira\n\n\n', intervalo=0.05)
            sys.exit()

def escolha01(): #Escolha01 caso seja SIM, o jogo continua.
    limparTela()
    escrever_devagar(f'\n\n<Jubileu> Que maravilha! Escolha uma dessas armas e parta para sua jornada\n\n\n\n', intervalo=0.04)
    listaArmas = ['Espada antiga','Arco+Flecha','pato de borracha',]
    print ('\n',listaArmas[0],'\n',listaArmas[1],'\n',listaArmas[2],'\n')
    escolha_arma = input ('[1]\n[2]\n[3]\n') #Seleção de arma
    while True:
        if escolha_arma == '1':
            escolha_arma = 'Espada Antiga'
            print (f'\n\n*Você selecionou {escolha_arma}\n\n')
            limparTela()
            dialogo01()
            break
        elif escolha_arma == '2': 
            escolha_arma = 'Arco+Flecha'
            print (f'\n\n*Você selecionou {escolha_arma}\n\n')
            limparTela()
            dialogo01()
            break
        elif escolha_arma == '3':
            escolha_arma = 'Pato de borracha'
            print (f'\n\n*Você selecionou {escolha_arma}\n\n')
            limparTela()
            
            dialogo01()
            break
        else:
            limparTela()
            print('\nEscreva apenas uma das opções disponíveis!\n')
            pausa = input ('\n*Pressione a tecla "ENTER" para continuar')
            limparTela()
            listaArmas = ['Espada antiga','Arco+Flecha','pato de borracha',]
            print ('\n',listaArmas[0],'\n',listaArmas[1],'\n',listaArmas[2],'\n')
            escolha_arma = input ('[1]\n[2]\n[3]\n') #Seleção de arma
    
def jogar(): #Função que vai rodar o jogo a partir do menu principal 
    limparTela()
    escrever_devagar('\n\nVocê acorda em uma cabana de madeira, a luz do sol entra pela janela e você vê um homem alto e barbado a sua frente\n\n', intervalo=0.03)
    escrever_devagar('\n\n<Mago>Seja bem-vindo ao mundo mágico de TFIRW! Uma terra cheia de magía, aventuras e códigos!\n\n',intervalo=0.03 )
    nome_player = input ('\n\n<Mago> Qual o seu nome aventureiro(a)? ')
    limparTela()
    escrever_devagar(f'\n\n<Mago> Muito Prazer,{nome_player} eu me chamo JUBILEU! o mago\n', intervalo=0.03) 
    pausa = input ('\n*Pressione a tecla "ENTER" para continuar')
    limparTela()
    escrever_devagar(f'\n\n<Jubileu> Ainda bem que acordou, preciso da ajuda de um grande guerreiro, estou velho de mais para me aventurar mundo a fora.\n\n', intervalo=0.03)
    pausa = input ('\n*Pressione a tecla "ENTER" para continuar')
    limparTela()
    escrever_devagar(f'\n\nCaro guerreiro(a) {nome_player} , você estaria hábil de atravessar a floresta sombria e recuperar o Livro de feitiços que fica em uma caverna localizada após a mata da morte?',intervalo=0.03)
    print ('\n\n')
    #Escolha 01
    escolha_01 = input('Aceita a missão do Mago Jubileu? [s / n]').lower()
    while True:
        if escolha_01 == 'n':
            limparTela()
            escrever_devagar(f'<Jubileu> Puxa vida...jurava que você seria a pessoa certa para ajudar um pobre mago cansado a realizar seus feitiços. Espero que o destino guarde coisas boas para você,{nome_player}',intervalo=0.03)
            print('\n\n\n\n\n\n\n\n')
            escrever_devagar('              FINAL PREGUIÇOSO\n\n',intervalo=0.05)
            escrever_devagar(f'Você recusou o pedido de ajuda do Mago Jubileu e voltou a dormir, o nome de {nome_player} ficará marcado por toda a terra de TFIRW como o mais preguiçoso de todos os tempos',intervalo=0.04)
            print('\n\n\n\n\n')
            escrever_devagar('Obrigado por ter jogado! RPG feito por Fábio Teixeira',intervalo=0.1)
            print('\n\n\n\n\n\n')
            pausa = input ('\n*Pressione a tecla "ENTER"')
            sairDoJogo()
            break
        elif escolha_01 =='s':
            escolha01()
            break
        else:
            limparTela()
            print('\nEscreva apenas uma das opções disponíveis!\n')
            pausa = input ('\n*Pressione a tecla "ENTER" para continuar')
            limparTela()
            escolha_01 = input('Aceita a missão do Mago Jubileu? [s / n]').lower()

def tela_inicial(): 
    while True:
        limparTela()
        escrever_devagar('Seja Bem-vindo ao RPG de Terminal\n\n\n\n\n', intervalo=0.05)
        print('>Jogar<\n>Ajuda<\n>Sair<\n\n\n\n')
        selecao_menu = input('Digite uma das opções acima: \n\n\n').lower()
        if selecao_menu == 'sair': #Sair do jogo
                sairDoJogo()
                break
        elif selecao_menu =='ajuda': #Menu de ajuda e instruções do jogo
                limparTela()
                escrever_devagar('\n\n\nMenu de Ajuda\n\n\n', intervalo=0.05)
                print ('Esse é o RPG de Terminal\n\n\nPara jogar basta selecionar as opções disponíveis na tela\n\n')
                print ('caso queira sair do jogo basta selecionar a opção "sair" no menu e para começar a aventura escreva "jogar"\n\n\n')
                pausa = input ('\n*Pressione a tecla "ENTER" para continuar')
                limparTela()
        elif selecao_menu == 'jogar':
            jogar()
            break
        else: 
            print('\nEscreva apenas uma das opções disponíveis!\n')
            pausa = input ('\n*Pressione a tecla "ENTER" para continuar')

#Execução Inicial do código
print(tela_inicial())
